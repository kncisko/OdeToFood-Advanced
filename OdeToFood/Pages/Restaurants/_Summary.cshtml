@using OdeToFood.Core
@model Restaurant

<div class="card mb-3">
    <div class="card card-header alert-primary">
        <div class="row">
            <div class="col">
                <h3>@Model.Name</h3>
            </div>
            <div class="col float-right">
                <span class="float-right">
                    <a class="btn btn-info" asp-page="./Detail" asp-route-restaurantId="@Model.Id" title="Details"><i class="fas fa-search-plus"></i></a>
                    <a class="btn btn-info" asp-page="./Edit" asp-route-restaurantId="@Model.Id" title="Edit"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-info" asp-page="./Delete" asp-route-restaurantId="@Model.Id" title="Delete"><i class="fas fa-trash"></i></a>
                </span>
            </div>
        </div>
    </div>
    <div class="card card-body">
        <span>Location: @Model.Location.City, @Model.Location.Country</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
</div>
