@page "{restaurantId:Guid?}"
@using OdeToFood.Core 
@model OdeToFood.Pages.Restaurants.EditModel
@{
}

<h2>Edit Restaurant - @Model.Restaurant.Name</h2>

<form method="post">
    <input type="hidden" asp-for="Restaurant.Id" />
    <div class="form-group">
        <label asp-for="Restaurant.Name"></label>
        <input class="form-control" asp-for="Restaurant.Name" />
        <span class="text-danger" asp-validation-for="Restaurant.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Location.City"></label>
        <input class="form-control" asp-for="Restaurant.Location.City" />
        <span class="text-danger" asp-validation-for="Restaurant.Location.City"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Location.Country"></label>
        <input class="form-control" asp-for="Restaurant.Location.Country" />
        <span class="text-danger" asp-validation-for="Restaurant.Location.Country"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Cuisine"></label>
        <select class="form-control" asp-for="Restaurant.Cuisine" asp-items="Model.CuisineTypes"></select>
    </div>
    <button type="submit" class="btn btn-info">Save</button>
</form>